{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@app-components/*": ["app/components/*"],
      "@app-services/*": ["app/services/*"],
      "@app-services": ["app/services"],
      "@app-models/*": ["app/models/*"],
      "@app-models": ["app/models"],

      "@app-root-store/*": ["app/store/*"],
      "@app-root-store": ["app/store/index"]
    }
  }
}
